generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  role       Role     @default(STUDENT)
  recipes    Recipe[]
  
}

enum Role {
  STUDENT
  VENDOR
  ADMIN
}

model Recipe {
  id             Int          @id @default(autoincrement())
  title          String
  description    String
  imageURL       String
  ingredients    Ingredient[] 
  instructions   String          
  categories     Category[]   //Not in page yet, but should be added
  appliances     Appliances[]
  user           User         @relation(fields: [userID], references: [id])          
  userID         Int 
}


enum Appliances {
  RiceCooker
  PaniniPress
  ToasterOwen
  Toaster
  Microwave
  HotPlate
}

enum Category {
  Breakfast
  Vegan
  Meat
  Dessert
  Lunch
  Chocolate
  // Vegetarian      Not in categories yet, but should be added
  // GlutenFree
  // NutFree
  // DairyFree
}

model Ingredient {
  id       Int      @id @default(autoincrement())
  name     String   
  recipes  Recipe[] 
}










