generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // for local development
  url      = env("DATABASE_URL")
  // for Vercel
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  role       Role     @default(STUDENT)
  recipes    Recipe[]
}

enum Role {
  STUDENT
  ADMIN
}

model Recipe {
  id             Int               @id @default(autoincrement())
  title          String
  description    String
  imageURL       String
  cookTime       String            @default("10 minutes")
  ingredients    Ingredient[]
  instructions   String
  categories     RecipeCategory[]  // Changed to relation table
  appliances     RecipeAppliance[] // Changed to relation table
  email          String            // Changed from userID/owner
  user           User              @relation(fields: [email], references: [email])
  createdAt      DateTime          @default(now())
}


enum Appliances {
  RiceCooker
  PaniniPress
  ToasterOven   
  Toaster
  Microwave
  HotPlate
}

enum Category {
  Breakfast
  Lunch
  Dinner
  Vegan
  Meat
  Dessert
  Chocolate
}

model Ingredient {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
  recipeId  Int
}

// New models for many-to-many relations
model RecipeCategory {
  id       Int      @id @default(autoincrement())
  category Category
  recipe   Recipe   @relation(fields: [recipeId], references: [id])
  recipeId Int
}

model RecipeAppliance {
  id        Int        @id @default(autoincrement())
  appliance Appliances
  recipe    Recipe     @relation(fields: [recipeId], references: [id])
  recipeId  Int
}


model EmailSubscription {
  id           Int        @id @default(autoincrement())
  email        String
  subscribedAt DateTime @default(now())
}










